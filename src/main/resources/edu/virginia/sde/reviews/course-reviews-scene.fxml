<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="edu.virginia.sde.reviews.CourseReviewsSceneController"
            prefHeight="700.0" prefWidth="600.0">
    <VBox layoutX = "0" layoutY ="0" prefHeight = "100.0" prefWidth = "300.0" alignment = "CENTER">
        <children>
            <TableView fx:id="courseTable" layoutX="0.0" layoutY="0.0" prefHeight="300.0" prefWidth="450.0"></TableView>
            <Label text= "Your Review"/>
            <HBox layoutX = "0" layoutY ="0" prefHeight = "100.0" prefWidth = "300.0" alignment = "CENTER">
                <VBox layoutX = "0" layoutY ="0" prefHeight = "100.0" prefWidth = "300.0" alignment = "CENTER">
                    <Label text= "Rating Required"/>
                    <HBox layoutX = "0" layoutY ="0" prefHeight = "100.0" prefWidth = "300.0" alignment = "CENTER">
                        <VBox layoutX = "0" layoutY ="0" prefHeight = "100.0" prefWidth = "300.0" alignment = "CENTER">
                            <Label text= "Worst"/>
                            <Label text= "1"/>
                            <RadioButton fx:id="radio1" toggleGroup="rating"></RadioButton>
                        </VBox>
                        <VBox layoutX = "0" layoutY ="0" prefHeight = "100.0" prefWidth = "300.0" alignment = "CENTER">
                            <Label/>
                            <Label text= "2"/>
                            <RadioButton fx:id="radio2" toggleGroup="rating"></RadioButton>
                        </VBox>
                        <VBox layoutX = "0" layoutY ="0" prefHeight = "100.0" prefWidth = "300.0" alignment = "CENTER">
                            <Label/>
                            <Label text= "3"/>
                            <RadioButton fx:id="radio3" toggleGroup="rating"></RadioButton>
                        </VBox>
                        <VBox layoutX = "0" layoutY ="0" prefHeight = "100.0" prefWidth = "300.0" alignment = "CENTER">
                            <Label/>
                            <Label text= "4"/>
                            <RadioButton fx:id="radio4" toggleGroup="rating"></RadioButton>
                        </VBox>
                        <VBox layoutX = "0" layoutY ="0" prefHeight = "100.0" prefWidth = "300.0" alignment = "CENTER">
                            <Label text= "Best"/>
                            <Label text= "5"/>
                            <RadioButton fx:id="radio5" toggleGroup="rating"></RadioButton>
                        </VBox>
                    </HBox>
                </VBox>
                <VBox layoutX = "0" layoutY ="0" prefHeight = "100.0" prefWidth = "300.0" alignment = "CENTER">
                    <Label text= "Comment"/>
                    <TextArea fx:id="myReview" prefHeight = "100.0" prefWidth = "300.0"></TextArea>
                </VBox>
                <VBox layoutX = "0" layoutY ="0" prefHeight = "100.0" prefWidth = "300.0" alignment = "CENTER">
                    <Button text = "Save" onAction="#saveReview"/>
                    <Button text = "Delete" onAction="#deleteReview"/>
                </VBox>
            </HBox>
        </children>
    </VBox>
</AnchorPane>